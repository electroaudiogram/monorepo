{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["tsconfig.json", "package.json", "pnpm-lock.yaml"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "storybook-static/**",
        "!.next/cache/**"
      ],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },
    "test": {
      "dependsOn": [],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "tests/**", "package.json", "tsconfig.json"]
    },
    "check-types": {
      "cache": true,
      "dependsOn": [],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": [],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
